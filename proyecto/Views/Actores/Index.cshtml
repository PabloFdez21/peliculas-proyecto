@model IEnumerable<Actores>

@* El modelo es una lista de actores *@

@* Definir viewData *@

@{
    ViewData["Title"] = "Lista de Actores";
}


<div class="columna">
    <div class="col-md-8 offset-md-2">
        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FotoPerfil)</th>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Biografia)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td class="align-middle">
                        <img src="@item.FotoPerfil" alt="@item.Nombre" style="max-width:150px"/>
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Biografia)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"> <i class="badge-info bi-pencil-square"></i>Editar</a>
                        <a class="btn btn-outline-info"> <i class="badge-info bi-eye-square"></i>Detalles</a>
                        <a class="btn btn-outline-danger"> <i class="badge-info bi-pencil-trash"></i>Borrar</a>

                    </td>
                </tr>}
            </tbody>
            
        </table>
    </div>
</div>